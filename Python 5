#if statements
cars = ["audi", "bmw", "subaru", "toyota"]
for car in cars:
    if car == "bmw":
        print(car.upper())
    else:
        print(car.title())
#The in this example first checks if the current value of car is "bmw". If it is the value is printed uppercase.
#If the value of car is anything other than "bmw" is printed in title case.
answer = 17 
if answer != 42:
    print("That is not the correct answer. Please try again")

car = "subaru"
print("Is car == 'subaru'? I predict True." )
print(car == "subaru")

print("\nIs car == 'audi'? I predict False")
print(car == "audi")

color = "purple"
print("Is color == 'purple'? I predict True.")
print(color == "purple")

print("\nIs color == 'yellow'? I predict False")
print(color == "yellow")
